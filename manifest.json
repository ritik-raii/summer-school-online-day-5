{
  "manifest_version": 3,
  "name": "Live Weather Checker",
  "version": "1.0",
  "description": "Shows the weather based on your location.",
  "permissions": ["geolocation"],
  "host_permissions": [
    "https://api.weatherapi.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png"
    }
  }
}
